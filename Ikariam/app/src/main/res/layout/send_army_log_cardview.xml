<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:background="?android:selectableItemBackgroundBorderless"
        >

        <TextView
            android:id="@+id/logContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Bạn vừa gửi một đội quân đến House_1"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/logIcon"
            android:layout_alignTop="@+id/logIcon"
            />

        <TextView
            android:id="@+id/logSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="6 giờ trước"
            android:lines="1"
            android:textStyle="italic"
            android:layout_alignStart="@+id/logContent"
            android:layout_below="@+id/logContent"
            />

        <TextView
            android:id="@+id/detailButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:lines="1"
            android:text="Nhấp để xem chi tiết"
            android:textStyle="italic"
            android:layout_alignBaseline="@+id/logSendTime"
            android:layout_toEndOf="@+id/logSendTime"
            />

        <ImageView
            android:id="@+id/logIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_attack" />
        </RelativeLayout>
</android.support.v7.widget.CardView>