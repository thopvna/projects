<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingEnd="32dp"
    android:paddingStart="32dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/cardView7"
        app:layout_constraintTop_toTopOf="@+id/cardView4">

        <TextView
            android:id="@+id/moreOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_more_vert"
            android:padding="4dp"
            android:text="MORE"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAppearance="?android:textAppearanceSmall"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toTopOf="@+id/cardView4">

        <TextView
            android:id="@+id/showFieldButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackgroundBorderless"
            android:drawableBottom="@drawable/ic_attack"
            android:padding="4dp"
            android:text="Xem Trận"
            android:textAppearance="?android:textAppearanceSmall"
            android:visibility="gone"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/portLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Level 20"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@+id/portLevelLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/shipyardLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="8dp"
        android:text="Level 20"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@+id/shipyardLevelLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/townHallLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Level 20"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@+id/townHallLevelLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/townHallLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TOWN HALL: "
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shipyardLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="SHIPYARD: "
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/townHallLevelLabel" />

    <TextView
        android:id="@+id/portLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="PORTS: "
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipyardLevelLabel" />

    <TextView
        android:id="@+id/totalUnitsAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TỔNG SỐ UNIT: "
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portLevelLabel" />

    <TextView
        android:id="@+id/totalUnitsAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"

        app:layout_constraintBaseline_toBaselineOf="@+id/totalUnitsAmountLabel"
        app:layout_constraintEnd_toStartOf="@+id/textView3" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toRightOf="@+id/cardView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/effectsValue">

        <TextView
            android:id="@+id/showUnitsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_search"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:text="XEM LÍNH"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAppearance="?android:textAppearanceSmall" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=" đơn vị"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@+id/totalUnitsAmountValue"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="@+id/cardView4">

        <TextView
            android:id="@+id/showLogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_log"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:text="XEM LOG"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAppearance="?android:textAppearanceSmall" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/effectsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="HIỆU ỨNG:"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalUnitsAmountLabel" />

    <TextView
        android:id="@+id/effectsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Whale(0), Lò(0)"
        android:textAppearance="?android:textAppearanceSmall"
        android:textSize="12sp"
        android:textColor="#000"
        app:layout_constraintBaseline_toBaselineOf="@+id/effectsLabel"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>